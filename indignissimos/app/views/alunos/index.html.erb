<h2><%= link_to 'Professores', professores_path %></h2>
<h1>Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Escola</th>
      <th>Sobre</th>
      <th>Idade</th>
      <th>Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.id %></td>
        <td><%= aluno.nome %></td>
        <td><%= aluno.escola.nome %></td>
        <td><%= aluno.sobre %></td>
        <td><%= aluno.idade %></td>
        <td><%= aluno.nascimento %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Professores', professores_path %></td>
        </tr>
    <% end %>
  </tbody>
</table>

