<p id="notice"><%= notice %></p>

<h1>Professores</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Escola</th>
      <th>Sobre</th>
      <th>Idade</th>
      <th>Salario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professores.each do |professore| %>
      <tr>
        <td><%= professore.id %></td>
        <td><%= professore.nome %></td>
        <td><%= professore.escola.nome %></td>
        <td><%= professore.sobre %></td>
        <td><%= professore.idade %></td>
        <td><%= professore.salario %></td>
        <td><%= link_to 'Show', professore %></td>
        <td><%= link_to 'Edit', edit_professore_path(professore) %></td>
        <td><%= link_to 'Destroy', professore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

